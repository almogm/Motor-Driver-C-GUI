                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RowDefinition.Style>
                                </RowDefinition>
                                <RowDefinition Height="Auto"/>
                                <!-- Make Hall visible or not -->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
