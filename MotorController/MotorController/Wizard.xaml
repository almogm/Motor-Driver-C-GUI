                                                    </Style.Triggers>
                                                </Style>
                                            </ComboBoxItem.Style>
                                        </ComboBoxItem>
                                        <ComboBoxItem Content="SSI absolute encoder"></ComboBoxItem>-->
                                    </ComboBox>
                                    <TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="12" Width="Auto">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Text" Value="Resolution [counts/rev]" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding EncoderFeedback}" Value="5">
                                                        <Setter Property="Text" Value="Resolution [bit]" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="1" HorizontalAlignment="Right" BorderThickness="0"
                                            Width="{StaticResource MotorParametersWidth}" 
                                            FontSize="12"
                                            Text="{Binding EncoderResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                                <Setter Property="IsReadOnly" Value="False" />
                                                <Setter Property="IsHitTestVisible" Value="True"/>
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding EncoderFeedback}" Value="3" />
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter Property="IsReadOnly" Value="True" />
