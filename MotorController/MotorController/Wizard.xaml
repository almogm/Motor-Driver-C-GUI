                                              Width="{StaticResource MotorParametersWidth}" 
                                              FontSize="12"
                                              SelectedIndex="{Binding EncoderFeedback}">
                                        <ComboBoxItem Content="None"></ComboBoxItem>
                                        <ComboBoxItem Content="Incremental 1">
