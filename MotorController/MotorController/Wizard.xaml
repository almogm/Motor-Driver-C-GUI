                                              Width="{StaticResource MotorParametersWidth}" 
                                              FontSize="12"
                                              SelectedIndex="{Binding HallEnDis}">
                                <ComboBoxItem Content="Disable"></ComboBoxItem>
                                <ComboBoxItem Content="Enable"></ComboBoxItem>
                            </ComboBox>
                            <!--<TextBlock Grid.Row="1" Width="Auto" Text="   Encoder" VerticalAlignment="Center" Foreground="White" Background="Transparent" FontWeight="DemiBold" FontSize="12"/>-->
