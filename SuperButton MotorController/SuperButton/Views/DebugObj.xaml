<UserControl x:Class="SuperButton.Views.DebugObj"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:models="clr-namespace:SuperButton.Models"
      mc:Ignorable="d" 
      d:DesignHeight="30" d:DesignWidth="350">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!--ID-->
        <Border BorderBrush="White" BorderThickness="1" CornerRadius="4,0,0,4" Grid.Column="0">
            <Grid>
                <TextBox    x:Name="ID"
                            Width="50" 
                           Text="{Binding ID,UpdateSourceTrigger=PropertyChanged}" 
                           Foreground="White" FontSize="12"
                           VerticalContentAlignment="Center">
                    <i:Interaction.Behaviors>
                        <models:AllowableCharactersTextBoxBehavior/>
                    </i:Interaction.Behaviors>
                </TextBox>
            </Grid>
        </Border>
        <!--Index-->
        <Border BorderBrush="White" BorderThickness="1" Grid.Column="1">
            <Grid>
                <TextBox   Width="50"
                           Text="{Binding Index,UpdateSourceTrigger=PropertyChanged}" 
                           Foreground="White" FontSize="12"
                           VerticalContentAlignment="Center">
                    <i:Interaction.Behaviors>
                        <models:AllowableCharactersTextBoxBehavior/>
                    </i:Interaction.Behaviors>
                </TextBox>
            </Grid>
        </Border>
        <!--Type : Int/Float-->
        <Border BorderBrush="White" BorderThickness="1" Grid.Column="2">
            <Grid >
                <CheckBox     Style="{StaticResource CheckBoxStyle3}"
                              VerticalAlignment="Center"
                              IsChecked="{Binding IntFloat}">
                </CheckBox>
            </Grid>
        </Border>
        <!-- Get data-->
        <Border BorderBrush="White" BorderThickness="1" Grid.Column="3">
            <Grid>
                <TextBox   Width="50"
                           Text="{Binding GetData,UpdateSourceTrigger=PropertyChanged}" 
                           Foreground="White" FontSize="12"
                           VerticalContentAlignment="Center"/>
            </Grid>
        </Border>
        <!-- Get button-->
        <Border BorderBrush="White" BorderThickness="1" Grid.Column="4">
            <Grid >
                <Button Height="22" Width="30"
                              Template="{DynamicResource PressedButton}" 
                              Command="{Binding Get}"  
                              BorderThickness="0.5" 
                              Foreground="White"
                              Content="Get">
                </Button>
            </Grid>
        </Border>
        <!-- Set button-->
        <Border BorderBrush="White" BorderThickness="1" Grid.Column="5">
            <Grid >
                <Button Height="22" Width="30"
                              Template="{DynamicResource PressedButton}" 
                              Command="{Binding Set}"  
                              BorderThickness="0.5" 
                              Foreground="White"
                              Content="Set">
                </Button>
            </Grid>
        </Border>
        <!-- Set data-->
        <Border BorderBrush="White" BorderThickness="1" CornerRadius="0,4,4,0" Grid.Column="6">
            <Grid>
                <TextBox   Width="50"
                           Text="{Binding SetData,UpdateSourceTrigger=PropertyChanged}" 
                           Foreground="White" FontSize="12"
                           VerticalContentAlignment="Center">
                    <i:Interaction.Behaviors>
                        <models:AllowableCharactersTextBoxBehavior/>
                    </i:Interaction.Behaviors>
                </TextBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
